<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateFreeitemActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCreateFreeItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Free Item"
        android:textColor="#9C27B0"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_width="match_parent"        android:layout_height="360dp"
        android:scrollbars="vertical"        android:layout_marginTop="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:hint="Item Name"
                android:inputType="text"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <EditText
                android:id="@+id/etItemuploadedDate"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="MM/dd/yyyy HH:mm"
                android:inputType="datetime"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etItemName"/>
            <EditText
                android:id="@+id/etItemURL"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="Enter URL"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etItemuploadedDate"/>

            <EditText
                android:id="@+id/etEventDescription"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="Item Description "
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etItemURL"/>
            <EditText
                android:id="@+id/etItemNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/etEventDescription"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="Item Notes"
                android:inputType="text"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/etItemAddressLine1"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="AddressLine1"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etItemNotes"/>
            <EditText
                android:id="@+id/etItemAddressLine2"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="AddressLine2"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etItemAddressLine1"/>
            <EditText
                android:id="@+id/etItemCity"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="City"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etItemAddressLine2"/>
            <EditText
                android:id="@+id/etItemState"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="State"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etItemCity"/>
            <EditText
                android:id="@+id/etItemCountry"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="Country"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etItemState"/>
            <EditText
                android:id="@+id/etItemZipcode"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="Zipcode"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etItemCountry"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCreateItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#9C27B0"
            android:text="Create FreeItem"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnCancelCreateItem"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btnCancelCreateItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Secondary"
            android:text="Cancel"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnCreateItem"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>