<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FreeItemDeleteActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollEventDetails"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:scrollbars="vertical"
            android:layout_marginTop="25dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvDeleteItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item Delete Request"
                    android:layout_marginTop="10dp"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="32sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textItemId"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Item ID "
                    android:layout_marginTop="15dp"
                    android:textColor="@color/Info"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDeleteItem"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tvDItemID"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Item ID"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDeleteItem"
                    app:layout_constraintStart_toEndOf="@+id/textItemId"/>

                <TextView
                    android:id="@+id/textDItemName"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Item Name "
                    android:textColor="@color/Info"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDItemID"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tvDItemName"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDItemID"
                    app:layout_constraintStart_toEndOf="@+id/textDItemName"/>

                <TextView
                    android:id="@+id/textDeleteReason"
                    android:layout_width="160dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:text="Delete Reason "
                    android:textColor="@color/Info"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDItemName"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/etDReason"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:padding="10dip"
                    android:hint="Reason here..."
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDItemName"
                    app:layout_constraintStart_toEndOf="@id/textDeleteReason"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scrollEventDetails"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btnDeleteItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Request"
                android:backgroundTint="@color/Danger"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btncancelItem"/>
            <Button
                android:id="@+id/btncancelItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:backgroundTint="@color/Warning"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnDeleteItem"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_marginTop="54dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        app:menu="@menu/freebies_nav_bar"
        android:visibility="visible"/>

</androidx.drawerlayout.widget.DrawerLayout>