<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEventActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvUpdateEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Event"
        android:textColor="#9C27B0"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etUEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:hint="Event Name"
                android:inputType="text"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvUEventStartDate"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintTop_toBottomOf="@+id/etUEventName"
                android:text="Start Date and Time"/>

            <EditText
                android:id="@+id/etUEventStartDate"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="MM/dd/yyyy HH:mm"
                android:inputType="datetime"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUEventStartDate"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
            <TextView
                android:id="@+id/tvUEventEndDate"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintTop_toBottomOf="@+id/etUEventStartDate"
                android:text="End Date and Time"/>
            <EditText
                android:id="@+id/etUEventEndDate"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="MM/dd/yyyy HH:mm:ss"
                android:inputType="datetime"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUEventEndDate"/>
            <EditText
                android:id="@+id/etUEventDescription"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="Event Description"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etUEventEndDate"/>


            <EditText
                android:id="@+id/etUEventNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/etUEventDescription"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="Event Notes"
                android:inputType="text"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/etUEventAddressLine1"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="AddressLine1"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etUEventNotes"/>

            <EditText
                android:id="@+id/etUEventAddressLine2"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="AddressLine2"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etUEventAddressLine1"/>
            <EditText
                android:id="@+id/etUEventCity"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="City"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etUEventAddressLine2"/>


            <EditText
                android:id="@+id/etUEventState"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="State"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etUEventCity"/>

            <EditText
                android:id="@+id/etUEventCountry"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="Country"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etUEventState"/>
            <EditText
                android:id="@+id/etUEventZipcode"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:hint="Zipcode"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/etUEventCountry"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnUpdateEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#9C27B0"
            android:text="Update Event"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnCancelUpdateEvent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btnCancelUpdateEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Secondary"
            android:text="Cancel"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnUpdateEvent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>